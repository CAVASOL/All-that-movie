<nav class="navbar sticky-top navbar-light bg-light">
  <h1><%= @list.name %></h1>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">

    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-dark mr-2" %>
    <%= link_to "Back to list", lists_path, class: "btn btn-outline-dark" %>
  </form>
</nav>

<div class="d-flex flex-nowrap justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
  <% movie = bookmark.movie %>
    <div class="card" style="width: 300px;, height: 240px;">
      <img src="<%= movie.poster_url%>" class="card-img-top" alt="<%= movie.title %>">
      <div class="card-body d-inline">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.rating %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= movie.overview %></li>

        <%= link_to "DELETE", bookmark, method: :delete, data: { confirm: "Are you sure?"} %>

      </ul>
    </div>
  <% end %>
</div>
