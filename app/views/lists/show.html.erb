
<%# banner %>
<div class="position-relative">
  <% if @list.photo.attached? %>
    <div class="card-category card-large" style="background-image: url('<%= cl_image_path @list.photo.key %>')">
      <h1><%= @list.name %></h1>
    </div>
  <% else %>
    <div class="card-category" data-aos="zoom-in">
      <h1><%= @list.name %></h1>
    </div>
  <% end %>
  <span class="movie-tag"><%= pluralize(@list.movies.size, 'movie') %></span>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><em class="text-muted" style="color: #FFFFFF;"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-outline-light' %>
      <%= link_to 'Detete this list', list_path(@list), method: :delete, class: 'btn btn-outline-light', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>
  </div>

  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="movie-card">
          <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img' %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %> <span class="font-weight-normal"> â€¢ <%= movie.rating %> <i class="fas fa-star" style="color: #F39631"></i></span></strong>
              <small class="text"><%= movie.overview.first(150)... %></small>
            <div class="d-flex align-items-end pt-2">
              <div>
                <i class="fas fa-quote-left mr-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
            </div>
            <hr>
            <div class="d-flex align-items-end justify-content-between">
              <div>
                <small class="text-right flex-shrink-0"><%= link_to 'EDIT', edit_bookmark_path(bookmark), class: 'text-dark' %></small>
              </div>
              <div>
                <small class="text-right flex-shrink-0"><%= link_to 'DELETE', bookmark_path(bookmark), method: :delete, data: "Are you sure you want to remove #{movie.title} from your #{@list.name} list", class: 'text-danger' %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
