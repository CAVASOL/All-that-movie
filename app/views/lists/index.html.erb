<nav class="navbar sticky-top navbar-light bg-light">
  <a class="navbar-brand" href="#">ALL THAT MOVIE</a>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <%= link_to "Search", "#", class: "btn btn-outline-info m-2" %>
    <%= link_to "My List", lists_path, class: "btn btn-outline-dark m-2" %>
    <%= link_to "Add List", new_list_path, class: "btn btn-outline-dark" %>
  </form>
</nav>


<h1> All my lists (<%= @lists.length %>) </h1>
<div class="d-flex flex-nowrap justify-content-center">
  <% @lists.each do |list| %>
    <div class="card m-3" style="width: 24rem;">
      <div class="card-body">
        <%= link_to list.name, list_path(list) %>
      </div>
    </div>
  <% end %>
</div>
