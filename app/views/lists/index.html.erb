<div class="banner">
  <%= form_tag movies_path, method: :get do %>
    <div class="search">
      <%= text_field_tag :query, params[:query], class: "index-search", placeholder: "Search Your Favorite Movie?" %>
      <%# <%= submit_tag "Search", class: "btn btn-outline-light mr-3" %>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="index-title">
    <h3 class="list-title"> All My Lists (<%= @lists.length %>) </h3>
    <div class="buttons">
      <%# <%= link_to "My list", lists_path, class: "my-list" %>
      <%= link_to "New list", new_list_path, class: "new-list" %>
    </div>
  </div>

  <div class="lists">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:'list text-decoration-none' do %>
        <% if list.photo.attached? %>
          <div class="list-card" data-aos="zoom-in" style="background-image: url('<%= cl_image_path list.photo.key %>')">
            <%= list.name %>
          </div>
        <% else %>
          <div class="list-card" data-aos="zoom-in">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
