<div class="cover mb-2 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-2">
  <div class="d-flex align-items-center mr-5 mb-3">
    <h3 class="title mr-3"> All My Lists (<%= @lists.length %>) </h3>
    <%= link_to 'Add a list', new_list_path, class: 'btn btn-secondary' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4 ">
        <div class="mt-2 ml-3 mb-3 mr-3">
          <%= link_to list_path(list), class:'text-decoration-none' do %>
            <% if list.photo.attached? %>
              <div class="card-category" data-aos="zoom-in" style="background-image: url('<%= cl_image_path list.photo.key %>')">
                <%= list.name %>
              </div>
            <% else %>
              <div class="card-category" data-aos="zoom-in">
                <%= list.name %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
